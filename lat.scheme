(define atom?
   (lambda
      (x)
      (not
         (or
            (pair? x)
            (null? x)
         )
      )
   )
)

; definition of "atom?" from Chapter 1

(define lat?
   (lambda
      (l)
      (cond
         (  (null? l) #t)
         (  (atom? (car l))
            (lat?  (cdr l))
         )
         (else #f)
      )
   )
)

(lat? '(bacon and eggs))

(lat? '(bacon (and eggs)))

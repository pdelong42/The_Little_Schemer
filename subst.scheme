(define subst*
   (lambda
      (new old l)
      (cond
         (  (null? l)
            (quote ())
         )
         (  (pair? l)
            (cons
               (subst* new old (car l))
               (subst* new old (cdr l))
            )
         )
         (  (eq? old l) new)
         (else l)
      )
   )
)

(subst* 'topping 'fudge '(ice cream with fudge for desert))

(subst* 'jalape√o 'and '(tacos tamales and salsa))


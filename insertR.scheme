(define insertR
   (lambda
      (new old lat)
      (cond
         (  (null? lat)
            (quote ())
         )
         (else
            (cons
               (car lat)
               (cond
                  (  (eq?  old (car lat))
                     (cons new (cdr lat))
                  )
                  (else (insertR new old (cdr lat)))
               )
            )
         )
      )
   )
)


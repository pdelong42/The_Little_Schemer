(define atom?
   (lambda
      (x)
      (not
         (or
            (pair? x)
            (null? x)
         )
      )
   )
)

(define insertR*
   (lambda
      (new old l)
      (cond
         (  (null? l)
            (quote ())
         )
         (else
            (cons
               (cond
                  (  (atom? (car l))
                     (car l)
                  )
                  (else (insertR* new old (car l)))
               )
               (cond
                  (  (eq?  old (car l))
                     (cons new (insertR* new old (cdr l)))
                  )
                  (else (insertR* new old (cdr l)))
               )
            )
         )
      )
   )
)

(insertR* 'topping 'fudge '(ice cream with fudge for desert))

(insertR* 'jalape√o 'and '(tacos tamales and salsa))

